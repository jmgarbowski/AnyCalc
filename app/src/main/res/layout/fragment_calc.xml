<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="@dimen/calcScreenPadding"
            android:orientation="vertical"
            android:gravity="bottom|end"
            android:background="@color/calcDisplayBackground"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHeight_percent="0.40">
            <TextView
                    android:id="@+id/calcDisplayEquation"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/calcDisplayEquationRowHeight"
                    android:gravity="center_vertical"
                    android:textColor="@color/calcDisplayTextColor"
                    android:textSize="@dimen/calcDisplayEquationTextSize"
                    tools:text="(2 + 3) x 2"/>
            <TextView
                    android:id="@+id/calcDisplayResult"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/calcDisplayResultRowHeight"
                    android:gravity="center_vertical"
                    android:textColor="@color/calcDisplayTextColor"
                    android:textSize="@dimen/calcDisplayResultTextSize"
                    tools:text="10"/>
    </LinearLayout>
    <FrameLayout
            android:id="@+id/keypad"
            android:background="@color/calcKeypadBackground"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/display"
            app:layout_constraintHeight_percent="0.60">

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>